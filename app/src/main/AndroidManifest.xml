<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="es.iessaladillo.pedrojoya.pr05_trivial"
    tools:ignore="GoogleAppIndexingWarning">

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:parentActivityName="ui.main.MainActivity"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.game.GameFragment"
            android:label="@string/game_question_title"
            android:parentActivityName=".ui.main.MainActivity" />
        <activity
            android:name=".ui.about.AboutFragment"
            android:label="@string/about_title"
            android:parentActivityName=".ui.main.MainActivity" />
        <activity
            android:name=".ui.rules.RulesFragment"
            android:label="@string/rules_title"
            android:parentActivityName=".ui.main.MainActivity" />
        <activity
            android:name=".ui.settings.SettingsFragment"
            android:label="@string/settings_title"
            android:parentActivityName=".ui.main.MainActivity" />
    </application>

</manifest>